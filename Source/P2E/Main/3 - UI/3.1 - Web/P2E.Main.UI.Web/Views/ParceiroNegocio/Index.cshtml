@model P2E.Main.UI.Web.Models.SSO.ParceiroNegocio.ParceiroNegocioListViewModel
@{
    ViewData["Title"] = "Lista de Parceiros de Negócio";
    ViewData["PageName"] = "parceiro_negocio";
    ViewData["Category1"] = "Parceiro de Negócio";

    //Alert info
    var type = (string)TempData["_alert.type"];
    var title = (string)TempData["_alert.title"];
    var body = (string)TempData["_alert.body"];

    var nome_rotina = "Parceiro de Negócio";

}

<div class="row">
    <div class="col-xl-12">

        @if (!string.IsNullOrEmpty(type))
        {
            <partial name="_DisplayMessagePartial" />
        }

        <div class="panel">
            <div class="panel-hdr">
                <div class="col-lg-5">
                    <h1>
                        Lista de Parceiros de Negócio
                    </h1>
                </div>
                <div class="col-lg-7 text-lg-right">
                    @if (P2E.Main.UI.Web.Extensions.Util.Permissoes.VerificarPermissao(nome_rotina, "Criar", User))
                    {
                        <a asp-action="Create" class="btn btn-primary float-right"><i class="fal fa-plus-circle"></i>&nbsp;&nbsp;Adicionar</a>
                    }
                </div>

            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <form asp-action="/" method="get" id="formLista">
                        <input type="hidden" asp-for="DataPage.CurrentPage" />
                        <input type="hidden" asp-for="DataPage.Descending" />
                        @*<input type="hidden" asp-for="DataPage.PageSize" />*@

                        <div class="row">
                            <div class="col-md-2">
                                <input type="text" asp-for="cnpj" class="form-control" placeholder="CNPJ" />
                            </div>

                            <div class="col-md-6">
                                <input type="text" asp-for="razaosocial" class="form-control" placeholder="Razão Social" />
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-default" type="submit"><i class="fal fa-search"></i>&nbsp;&nbsp;Localizar</button>
                            </div>

                        </div><br />

                        <div class="row">
                            <div class="col-sm-9 "></div>
                            <div class="col form-text">Exibir</div>
                            <div class="col text-lg-right">
                                <select asp-for="DataPage.PageSize" class="form-control" style="width: 70px" id="comboQtdRegistro">

                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="25">25</option>

                                </select>
                            </div>
                            <div class="col form-text">Registros</div>
                        </div>

                    </form>
                    <hr />
                    @if (Model.DataPage.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover m-0">
                                <thead class="thead-themed">
                                    <tr>
                                        @*<th>Código</th>*@
                                        <th>Razão Social</th>
                                        <th>CNPJ</th>
                                        <th width="20"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.DataPage.Items)
                                    {
                                        <tr>
                                            @*<td>@item.CD_PAR</td>*@
                                            <td>@item.TXT_RZSOC</td>
                                            <td>@item.CNPJ</td>
                                            @*<td class="text-center">
                                    <i data-id="@item.CD_PAR"
                                       data-controller="ParceiroNegocio"
                                       data-action="Delete"
                                       data-body-message="Deseja excluir este registro?"
                                       style="font-weight:bold;cursor:pointer" class="delete fal fa-trash-alt text-danger">

                                    </i>
                                </td>*@
                                            @if (P2E.Main.UI.Web.Extensions.Util.Permissoes.VerificarPermissao(nome_rotina, "Visualizar", User))
                                            {
                                                <td class="text-center"><a asp-action="View" asp-route-id="@item.CD_PAR"><i style="font-weight:bold;cursor:pointer" class="fal fa-search text-success"></i></a></td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <!-- pager -->
                            @if (Model.DataPage.Pages != null && Model.DataPage.Pages.Any())
                            {
                                <nav class="table-responsive">
                                    <ul class="pagination justify-content-center d-flex flex-wrap">
                                        @if (Model.DataPage.CurrentPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Model.DataPage.GetLinkPage($"razaosocial={""}&cnpj={""}", Model.DataPage.FirstPage)">Primeiro</a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" href="@Model.DataPage.GetLinkPage($"razaosocial={""}&cnpj={""}", Model.DataPage.PriorPage)">Anterior</a>
                                            </li>
                                        }

                                        @for (int i = 1; i <= Model.DataPage.TotalPages; i++)
                                        {
                                            var pg = Model.DataPage.Pages.First(p => p.PageNumber == i);

                                            <li class="page-item @(pg.PageNumber == Model.DataPage.CurrentPage ? "active" : "")">
                                                <a class="page-link" href="@Model.DataPage.GetLinkPage($"razaosocial={""}&cnpj={""}", pg.PageNumber)">@pg.PageNumber</a>
                                            </li>
                                        }

                                        @if (Model.DataPage.CurrentPage < Model.DataPage.TotalPages)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="@Model.DataPage.GetLinkPage($"razaosocial={""}&cnpj={""}", Model.DataPage.NextPage)">Próximo</a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" href="@Model.DataPage.GetLinkPage($"razaosocial={""}&cnpj={""}", Model.DataPage.LastPage)">Último</a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                            }

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/js/ParceiroNegocio/ParceiroNegocioIndex.js"></script>

}